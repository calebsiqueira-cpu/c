#include <stdio.h>

int main() {
    float altura, peso, imc;

    printf("Qual o seu peso? ");
    scanf("%f", &peso);

    printf("Qual sua altura? ");
    scanf("%f", &altura);
   
    imc = peso / (altura * altura);

    printf("\nSeu imc Ã©: %.2f", imc);
    
    if (imc < 18.5){
        printf("\nAbaixo do peso.");
    }
    else 
        if (imc >= 18.5 && imc <= 24.9){
            printf("\nPeso comum.");  
        }
        else
            if (imc >= 25 && imc <= 29.9){
                printf("\nSobrepeso.");
            }
            else
                if (imc >= 30){
                printf("\nObesidade.");
                }

    return 0;
}
